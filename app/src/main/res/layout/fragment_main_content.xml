<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainContentFragment">

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:rowCount="1"
        app:columnCount="4"
        android:background="@color/colorPrimary"
        android:elevation="@dimen/elevation_unit">
        <RelativeLayout app:layout_columnWeight="1">
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/ic_create_black_48dp"
                android:tint="@color/colorPrimaryLight"
                android:id="@+id/icon_page_record" />
        </RelativeLayout>
        <RelativeLayout app:layout_columnWeight="1">
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/ic_insert_chart_black_48dp"
                android:tint="@color/colorPrimaryLight"
                android:id="@+id/icon_page_analysis" />
        </RelativeLayout>
        <RelativeLayout app:layout_columnWeight="1">
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/ic_find_in_page_black_48dp"
                android:tint="@color/colorPrimaryLight"
                android:id="@+id/icon_page_query" />
        </RelativeLayout>
        <RelativeLayout app:layout_columnWeight="1">
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/ic_account_circle_black_48dp"
                android:tint="@color/colorPrimaryLight"
                android:id="@+id/icon_page_account" />
        </RelativeLayout>

    </android.support.v7.widget.GridLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_content"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:background="@android:color/white" />


</LinearLayout>
